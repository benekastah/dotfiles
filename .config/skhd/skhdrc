:: default : /Users/paul/.config/skhd/yabai-dispatch.sh RESET

# Object modes
:: window  @ : /Users/paul/.config/skhd/yabai-dispatch.sh RESET \; -m window
:: space_  @ : /Users/paul/.config/skhd/yabai-dispatch.sh RESET \; -m space
:: display @ : /Users/paul/.config/skhd/yabai-dispatch.sh RESET \; -m display

# Mode transitions

# ctrl - space from default mode goes to window mode
default < ctrl - space ; window

# ctrl - space or escape from any other mode goes back to default mode
window, space_, display < ctrl - space ; default
window, space_, display < escape ; default

# Global shortcuts: all modes including default
# Pressing ctrl - ? in any mode shows yabai dispatch status
# default, window, space_, display < ctrl + shift - 0x2C : /Users/paul/.config/skhd/yabai-dispatch.sh STATUS
default, window, space_, display < cmd - 1 : /Users/paul/.config/skhd/yabai-dispatch.sh RESET \; -m space --focus 1 \; EXECUTE; skhd -k "escape"
default, window, space_, display < cmd - 2 : /Users/paul/.config/skhd/yabai-dispatch.sh RESET \; -m space --focus 2 \; EXECUTE; skhd -k "escape"
default, window, space_, display < cmd - 3 : /Users/paul/.config/skhd/yabai-dispatch.sh RESET \; -m space --focus 3 \; EXECUTE; skhd -k "escape"
default, window, space_, display < cmd - 4 : /Users/paul/.config/skhd/yabai-dispatch.sh RESET \; -m space --focus 4 \; EXECUTE; skhd -k "escape"
default, window, space_, display < cmd - 5 : /Users/paul/.config/skhd/yabai-dispatch.sh RESET \; -m space --focus 5 \; EXECUTE; skhd -k "escape"
default, window, space_, display < cmd - 6 : /Users/paul/.config/skhd/yabai-dispatch.sh RESET \; -m space --focus 6 \; EXECUTE; skhd -k "escape"
default, window, space_, display < cmd - 7 : /Users/paul/.config/skhd/yabai-dispatch.sh RESET \; -m space --focus 7 \; EXECUTE; skhd -k "escape"
default, window, space_, display < cmd - 8 : /Users/paul/.config/skhd/yabai-dispatch.sh RESET \; -m space --focus 8 \; EXECUTE; skhd -k "escape"
default, window, space_, display < cmd - 9 : /Users/paul/.config/skhd/yabai-dispatch.sh RESET \; -m space --focus 9 \; EXECUTE; skhd -k "escape"

# Shortcuts in all modes for things we need to do a lot
# window, space_, display < q : yabai -m window --close; skhd -k "ctrl - space"

window < q : yabai -m window --close; skhd -k "ctrl - space"
space_ < q : yabai -m space --destroy; skhd -k "ctrl - space"

# Object mode transitions
window, space_, display < w ; window   # [w]indow
window, space_, display < s ; space_   # [s]pace
window, space_, display < d ; display  # [d]isplay

# Object selection. shift means swap and ctrl means warp.
window                  < h              : /Users/paul/.config/skhd/yabai-dispatch.sh --focus west   \; EXECUTE; skhd -k "ctrl - space"
window                  < l              : /Users/paul/.config/skhd/yabai-dispatch.sh --focus east   \; EXECUTE; skhd -k "ctrl - space"
window                  < j              : /Users/paul/.config/skhd/yabai-dispatch.sh --focus south  \; EXECUTE; skhd -k "ctrl - space"
window                  < k              : /Users/paul/.config/skhd/yabai-dispatch.sh --focus north  \; EXECUTE; skhd -k "ctrl - space"
# [
window, space_, display < 0x21           : /Users/paul/.config/skhd/yabai-dispatch.sh --focus first  \; EXECUTE; skhd -k "ctrl - space"
# ]
window, space_, display < 0x1E           : /Users/paul/.config/skhd/yabai-dispatch.sh --focus last   \; EXECUTE; skhd -k "ctrl - space"
# -
window, space_, display < 0x1B           : /Users/paul/.config/skhd/yabai-dispatch.sh --focus prev   \; EXECUTE; skhd -k "ctrl - space"
# =
window, space_, display < 0x18           : /Users/paul/.config/skhd/yabai-dispatch.sh --focus next   \; EXECUTE; skhd -k "ctrl - space"
window, space_, display < return         : /Users/paul/.config/skhd/yabai-dispatch.sh --focus recent \; EXECUTE; skhd -k "ctrl - space"

window                  < shift - h      : /Users/paul/.config/skhd/yabai-dispatch.sh --swap west    \; EXECUTE; skhd -k "ctrl - space"
window                  < shift - l      : /Users/paul/.config/skhd/yabai-dispatch.sh --swap east    \; EXECUTE; skhd -k "ctrl - space"
window                  < shift - j      : /Users/paul/.config/skhd/yabai-dispatch.sh --swap south   \; EXECUTE; skhd -k "ctrl - space"
window                  < shift - k      : /Users/paul/.config/skhd/yabai-dispatch.sh --swap north   \; EXECUTE; skhd -k "ctrl - space"
# [
window, space_          < shift - 0x21   : /Users/paul/.config/skhd/yabai-dispatch.sh --swap first   \; EXECUTE; skhd -k "ctrl - space"
# ]
window, space_          < shift - 0x1E   : /Users/paul/.config/skhd/yabai-dispatch.sh --swap last    \; EXECUTE; skhd -k "ctrl - space"
# -
window, space_          < shift - 0x1B   : /Users/paul/.config/skhd/yabai-dispatch.sh --swap prev    \; EXECUTE; skhd -k "ctrl - space"
# =
window, space_          < shift - 0x18   : /Users/paul/.config/skhd/yabai-dispatch.sh --swap next    \; EXECUTE; skhd -k "ctrl - space"
window, space_          < shift - return : /Users/paul/.config/skhd/yabai-dispatch.sh --swap recent  \; EXECUTE; skhd -k "ctrl - space"

window                  < ctrl - h       : /Users/paul/.config/skhd/yabai-dispatch.sh --warp west    \; EXECUTE; skhd -k "ctrl - space"
window                  < ctrl - l       : /Users/paul/.config/skhd/yabai-dispatch.sh --warp east    \; EXECUTE; skhd -k "ctrl - space"
window                  < ctrl - j       : /Users/paul/.config/skhd/yabai-dispatch.sh --warp south   \; EXECUTE; skhd -k "ctrl - space"
window                  < ctrl - k       : /Users/paul/.config/skhd/yabai-dispatch.sh --warp north   \; EXECUTE; skhd -k "ctrl - space"
# [
window, space_          < ctrl - 0x21    : /Users/paul/.config/skhd/yabai-dispatch.sh --warp first   \; EXECUTE; skhd -k "ctrl - space"
# ]
window, space_          < ctrl - 0x1E    : /Users/paul/.config/skhd/yabai-dispatch.sh --warp last    \; EXECUTE; skhd -k "ctrl - space"
# -
window, space_          < ctrl - 0x1B    : /Users/paul/.config/skhd/yabai-dispatch.sh --warp prev    \; EXECUTE; skhd -k "ctrl - space"
# =
window, space_          < ctrl - 0x18    : /Users/paul/.config/skhd/yabai-dispatch.sh --warp next    \; EXECUTE; skhd -k "ctrl - space"
window, space_          < ctrl - return  : /Users/paul/.config/skhd/yabai-dispatch.sh --warp recent  \; EXECUTE; skhd -k "ctrl - space"
